extends pug/base

prepend vars
	//-

append vars
	-
		title = "Индустрии"
		meta.description = "Описание"
		link.icon = "favicons/favicon.ico"
		link.icon16x16 = "favicons/favicon-16x16.png"
		link.icon32x32 = "favicons/favicon-32x32.png"

block content
	+breadcrumb(['Главная'], 'Индустрии')(class="container")

	// Section Industries
	section.section-industries.road
		.container
			h1.h1.text-blue.section-industries__title Индустрии
			p.section-industries__description Обладаем экспертизой в различных областях, что делает нас профессионалами.
			.section-industries__grid
				// Card
				a.section-industries__card.section-industries__card--top-wide.simple-card(href="#")
					.simple-card__title-box
						p.simple-card__title Fashion
					.simple-card__bg-box
						img.simple-card__bg(src="images/section-ready/bg7.jpg", alt)
				// Card
				a.section-industries__card.section-industries__card--top.simple-card(href="#")
					.simple-card__title-box
						p.simple-card__title FMCG
					.simple-card__bg-box
						img.simple-card__bg(src="images/section-ready/bg4.jpg", alt)
				// Card
				a.section-industries__card.section-industries__card--top-wide.simple-card(href="#")
					.simple-card__title-box
						p.simple-card__title Automotive
					.simple-card__bg-box
						img.simple-card__bg(src="images/section-ready/bg3.jpg", alt)
				// Card
				a.section-industries__card.section-industries__card--bottom.simple-card(href="#")
					.simple-card__title-box
						p.simple-card__title Telecom
					.simple-card__bg-box
						img.simple-card__bg(src="images/section-ready/bg5.jpg", alt)
				// Card
				a.section-industries__card.section-industries__card--bottom-wide.simple-card(href="#")
					.simple-card__title-box
						p.simple-card__title Healthcare
					.simple-card__bg-box
						img.simple-card__bg(src="images/section-ready/bg8.jpg", alt)
				// Card
				a.section-industries__card.section-industries__card--bottom.simple-card(href="#")
					.simple-card__title-box
						p.simple-card__title POSM
					.simple-card__bg-box
						img.simple-card__bg(src="images/section-ready/bg9.jpg", alt)
